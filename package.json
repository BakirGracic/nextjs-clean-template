{
	"name": "nextjs-clean-template",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "rm -rf .next && next dev --turbopack --experimental-https",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"prettier": "prettier --write '**/*.*'",
		"update": "npx npm-check-updates -u",
		"tsc": "tsc --noEmit",
		"nextjs-codemod": "npx @next/codemod@canary upgrade latest"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.0.9",
		"next": "~15.2.0",
		"react": "^19.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@types/node": "^22",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "~15.2.0",
		"postcss": "^8.5.3",
		"prettier": "^3.5.2",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^4.0.9",
		"typescript": "^5"
	}
}
